<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="danieljimenezexamenp1.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="UISRAEL" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

            <Entry x:Name="txtUser" Placeholder="User"/>
            <Entry x:Name="txtPassword" Placeholder="Password"/>

            <Button x:Name="btnLogueo" Text="Login" Clicked="btnLogueo_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>